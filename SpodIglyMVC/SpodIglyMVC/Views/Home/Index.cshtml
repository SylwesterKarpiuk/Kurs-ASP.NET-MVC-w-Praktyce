@model SpodIglyMVC.ViewModels.HomeViewModel
@using SpodIglyMVC.Infrastructure
@{

    ViewBag.Title = "Witaj w spodigly!!!";
}

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <link href="../Content/Site.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" charset="utf-8" />
    <title></title>
</head>
<body>

    <nav class="genres-horizontal">
        <ul>
            @foreach (var item in Model.Genres)
            {
                <li>
                    <a href="@Url.Action("List", "Store", new { genrename = item.Name.ToLower() })" style="background-image: url(@Url.GenreIconPath(item.IconFilename));">
                        @item.Name
                    </a>
                </li>
            }
        </ul>
        <a href="">
            <img id="baner-main" src="../Content/Images/baner-main.png" />
        </a>
    </nav>
    <section>
        <ul class="ThreeColumnsCoversList large-cover-list">
            @foreach (var newArrival in Model.NewArrivals)
            {


                <li>
                    <article>
                        <a class="addtocartlink" href="@Url.Action("AddToCart", "Cart", new { id = newArrival.AlbumId })">
                            <img src="../Content/Images/cart.png" />
                        </a>
                        <a class="productdetailslink" href="@Url.Action("Details","Store", new { id = newArrival.AlbumId })">
                            <div class="newFlag"></div>
                            <img class="album-cover" src="@Url.AlbumCoverPath(newArrival.CoverFileName)" />
                            <h1>@newArrival.ArtistName - @newArrival.AlbumTitle</h1>
                        </a>
                    </article>
                </li>
            }
        </ul>
    </section>
    <section>
        <ul class="ThreeColumnsCoversList large-cover-list">

            @foreach (var bestseller in Model.BestSellers)
            {
                <li>
                    <article>
                        <a class="addtocartlink" href="@Url.Action("AddToCart", "Cart", new { id = bestseller.AlbumId })" >
                            <img src="../Content/Images/cart.png" />
                        </a>
                        <a class="productdetailslink" href="@Url.Action("Details","Store", new { id = bestseller.AlbumId })" >
                            <div class="bestsellerFlag"></div>
                            <img class="album-cover" src="@Url.AlbumCoverPath(bestseller.CoverFileName)" />
                            <h1>
                                @bestseller.ArtistName - @bestseller.AlbumTitle
                            </h1>
                        </a>
                    </article>
                </li>
            }
        </ul>
    </section>

</body>
</html>